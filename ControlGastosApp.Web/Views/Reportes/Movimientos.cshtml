@model ControlGastosApp.Web.ViewModels.Reportes.MovimientosReporteViewModel
@{
    ViewData["Title"] = "Movimientos";
    var azulSuave = "#e3f0fa";
    var grisSuave = "#f8f9fa";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Movimientos</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Buscar Movimientos por Fecha</h6>
        </div>
        <div class="card-body">
            <form asp-action="Movimientos" method="post" class="form-inline mb-4">
                <div class="form-group mr-2">
                    <label asp-for="FechaInicio" class="mr-2">Desde</label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                </div>
                <div class="form-group mr-2">
                    <label asp-for="FechaFin" class="mr-2">Hasta</label>
                    <input asp-for="FechaFin" class="form-control" type="date" />
                </div>
                <button type="submit" class="btn btn-primary">Buscar</button>
            </form>

            @if (Model.Movimientos != null && Model.Movimientos.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered shadow-sm rounded" style="background: #fff;">
                        <thead style="background: #222; color: #fff;">
                            <tr>
                                <th>Fecha</th>
                                <th>Movimiento</th>
                                <th class="text-center">Entradas</th>
                                <th class="text-center">Salidas</th>
                                <th class="text-center">Saldo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Movimientos.Count; i++)
                            {
                                var movimiento = Model.Movimientos[i];
                                var rowColor = i % 2 == 0 ? azulSuave : grisSuave;
                                <tr style="background: @rowColor;">
                                    <td>@movimiento.Fecha.ToString("dd/MM/yyyy")</td>
                                    <td>@movimiento.Descripcion</td>
                                    <td class="text-right">
                                        @if (movimiento.Entradas.HasValue && movimiento.Entradas.Value > 0)
                                        {
                                            <span class="text-success font-weight-bold">
                                                <i class="fas fa-arrow-up"></i>
                                                @movimiento.Entradas.Value.ToString("C")
                                            </span>
                                        }
                                    </td>
                                    <td class="text-right">
                                        @if (movimiento.Salidas.HasValue && movimiento.Salidas.Value > 0)
                                        {
                                            <span class="text-danger font-weight-bold">
                                                <i class="fas fa-arrow-down"></i>
                                                @movimiento.Salidas.Value.ToString("C")
                                            </span>
                                        }
                                    </td>
                                    <td class="text-right font-weight-bold">@movimiento.Saldo.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No hay movimientos para el rango de fechas seleccionado.</div>
            }
        </div>
    </div>
</div> 