@model ControlGastosApp.Web.Models.FondoMonetario
@{
    ViewData["Title"] = "Eliminar Fondo Monetario";
    Layout = "_Layout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Eliminar Fondo Monetario</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Confirmar Eliminación</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            ¿Está seguro que desea eliminar el fondo "@Model.Nombre"?
        </div>
        <div class="alert alert-danger">
            <i class="fas fa-info-circle"></i>
            <strong>Advertencia:</strong> Esta acción no se puede deshacer y eliminará todos los movimientos asociados a este fondo.
        </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id">
            <div class="form-group">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div> 