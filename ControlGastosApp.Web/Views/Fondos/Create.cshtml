@model ControlGastosApp.Web.ViewModels.FondosMonetarios.FondoMonetarioViewModel
@{
    ViewData["Title"] = "Nuevo Fondo Monetario";
    Layout = "_Layout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Nuevo Fondo Monetario</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Informaci√≥n del Fondo</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="Nombre">Nombre</label>
                    <input asp-for="Nombre" class="form-control" required>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Saldo">Saldo Inicial</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Saldo" class="form-control" type="number"
                               step="0.01"
                               min="0.01"
                               oninput="if(this.value.length > 15) this.value = this.value.slice(0,15);" required>
                    </div>
                    <span asp-validation-for="Saldo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-none d-md-block">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </form>
        <div class="fixed-bottom bg-white p-2 border-top d-md-none" style="z-index:1050;">
            <button type="submit" form="gastoForm" class="btn btn-primary btn-block">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-block mt-2">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 