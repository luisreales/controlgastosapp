@using ControlGastosApp.Web.Models
@{
    ViewData["Title"] = "Eliminar Depósito";
    Layout = "_Layout";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Eliminar Depósito</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Confirmar Eliminación</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            ¿Está seguro que desea eliminar el depósito del <strong>@Model.Fecha.ToString("dd/MM/yyyy")</strong> por <strong>$@Model.Monto.ToString("N2")</strong>?
        </div>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div> 