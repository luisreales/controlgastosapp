@model IEnumerable<ControlGastosApp.Web.ViewModels.Depositos.DepositoListViewModel>
@{
    ViewData["Title"] = "Dep贸sitos";
    Layout = "_Layout";
}

<div class="container-fluid px-2 px-md-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-3 mb-md-4">
        <h1 class="h3 mb-0 text-gray-800">Dep贸sitos</h1>
        <div class="mb-2 mb-md-0">
            <a href="@Url.Action("Create")" class="btn btn-primary btn-block w-100 w-md-auto">
                <i class="fas fa-plus"></i> Nuevo Dep贸sito
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card shadow mb-4">
        <div class="card-header py-2 py-md-3">
            <h6 class="m-0 font-weight-bold text-primary">Listado de Dep贸sitos</h6>
        </div>
        <div class="card-body p-2 p-md-3">
            <div class="table-responsive">
                <table class="table table-bordered" id="depositos-table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Fondo</th>
                            <th class="d-none d-md-table-cell">Monto</th>                       
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deposito in Model)
                        {
                            <tr>
                                <td>@deposito.FechaFormateada</td>
                                <td>@deposito.FondoNombre</td>
                                <td class="d-none d-md-table-cell">@deposito.MontoFormateado</td>                           
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-info btn-sm" href="@Url.Action("Detalle", new { id = deposito.Id })" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = deposito.Id })" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = deposito.Id })" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#depositos-table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
                },
                order: [[0, 'desc']]
            });
        });
    </script>
}

<style>
    @@media (max-width: 767.98px) {
        .table-responsive {
            padding-left: 2px !important;
            padding-right: 2px !important;
        }
        .btn-group {
            display: flex;
            gap: 2px;
        }
        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }
        .card-body {
            padding: 0.5rem !important;
        }
        .table td, .table th {
            padding: 0.5rem;
            vertical-align: middle;
        }
    }
</style>