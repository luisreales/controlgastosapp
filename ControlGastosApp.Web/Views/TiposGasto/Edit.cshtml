@model ControlGastosApp.Web.ViewModels.TiposGasto.TipoGastoViewModel
@{
    ViewData["Title"] = "Editar Tipo de Gasto";
    Layout = "_Layout";
    var prefijo = ViewBag.PrefijoCodigoTipoGasto as string ?? "A";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Editar Tipo de Gasto</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Información del Tipo de Gasto</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id">
            <div class="form-group">
                <label asp-for="Codigo">Código</label>
                <input asp-for="Codigo" class="form-control" required readonly>
                <small class="form-text text-muted">El código se genera automáticamente siguiendo el formato '<b>@prefijo</b> + número' (ej: @(prefijo)10, @(prefijo)11, etc.)</small>
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre">Nombre</label>
                <input asp-for="Nombre" class="form-control" required>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <textarea class="form-control" id="descripcion" asp-for="Descripcion" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 