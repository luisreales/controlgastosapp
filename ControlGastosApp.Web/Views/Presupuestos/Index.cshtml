@model List<ControlGastosApp.Web.ViewModels.Presupuestos.PresupuestoListViewModel>
@{
    ViewData["Title"] = "Presupuestos";
    Layout = "_Layout";
}

<div class="container-fluid px-2 px-md-4">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-3 mb-md-4">
        <h1 class="h3 mb-0 text-gray-800">Presupuestos</h1>
        <div class="mb-2 mb-md-0">
            <a href="@Url.Action("Create")" class="btn btn-primary btn-block w-100 w-md-auto">
                <i class="fas fa-plus"></i> Nuevo Presupuesto
            </a>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-2 py-md-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Presupuestos</h6>
        </div>
        <div class="card-body p-2 p-md-3">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tipo de Gasto</th>
                            <th class="d-none d-md-table-cell">Mes</th>
                            <th class="d-none d-md-table-cell">Monto Presupuestado</th>
                            <th class="d-none d-md-table-cell">Monto Gastado</th>
                            <th class="d-none d-md-table-cell">Diferencia</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var diferencia = item.Monto - item.MontoGastado;
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.TipoGastoNombre</td>
                                <td class="d-none d-md-table-cell">@item.Mes</td>
                                <td class="d-none d-md-table-cell">@item.Monto.ToString("C")</td>
                                <td class="d-none d-md-table-cell">@item.MontoGastado.ToString("C")</td>
                                <td class="d-none d-md-table-cell @(diferencia < 0 ? "text-danger" : "text-success")">
                                    @diferencia.ToString("C")
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <a href="@Url.Action("Detalle", new { id = item.Id })" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                }
            });
        });
    </script>
}

<style>
    @@media (max-width: 767.98px) {
        .table-responsive {
            padding-left: 2px !important;
            padding-right: 2px !important;
        }
        .btn-group {
            display: flex;
            gap: 2px;
        }
        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }
        .card-body {
            padding: 0.5rem !important;
        }
        .table td, .table th {
            padding: 0.5rem;
            vertical-align: middle;
        }
    }
</style> 