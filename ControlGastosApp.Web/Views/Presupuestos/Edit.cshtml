@model ControlGastosApp.Web.ViewModels.Presupuestos.PresupuestoViewModel
@{
    ViewData["Title"] = "Editar Presupuesto";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Editar Presupuesto</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informaci√≥n del Presupuesto</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="TipoGastoId" class="control-label"></label>
                    <select asp-for="TipoGastoId" class="form-control" asp-items="@(new SelectList(ViewBag.TiposGasto, "Id", "Nombre"))">
                        <option value="">Seleccione un tipo de gasto</option>
                    </select>
                    <span asp-validation-for="TipoGastoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Mes" class="control-label"></label>
                    <input asp-for="Mes" class="form-control" type="month" />
                    <span asp-validation-for="Mes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Monto" class="control-label"></label>
                    <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 