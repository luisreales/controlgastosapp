@model ControlGastosApp.Web.ViewModels.Presupuestos.PresupuestoCreateViewModel
@{
    ViewData["Title"] = "Nuevo Presupuesto";
    Layout = "_Layout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Nuevo Presupuesto</h1>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Informaci√≥n del Presupuesto</h6>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row">
                <div class="form-group col-12">
                    <label asp-for="TipoGastoId" class="control-label">Tipo de Gasto</label>
                    <select asp-for="TipoGastoId" class="form-control" asp-items="@(new SelectList(Model.TiposGasto, "Id", "Nombre"))">
                        <option value="">Seleccione un tipo de gasto</option>
                    </select>
                    <span asp-validation-for="TipoGastoId" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Mes" class="control-label">Mes</label>
                    <input asp-for="Mes" class="form-control" type="month" />
                    <span asp-validation-for="Mes" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="Monto" class="control-label">Monto</label>
                    <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group d-none d-md-block">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
        <div class="fixed-bottom bg-white p-2 border-top d-md-none" style="z-index:1050;">
            <button type="submit" form="gastoForm" class="btn btn-primary btn-block">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-secondary btn-block mt-2">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 